# Server Configuration
NODE_ENV=production
PORT=3000

# Hostinger SMTP Configuration
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@cyberdefence.org.in
SMTP_PASSWORD=your-smtp-password

# Email From Configuration
FROM_EMAIL=otp@cyberdefence.org.in
FROM_NAME=Cyber Defence

# Rate Limiting
RATE_LIMIT_MAX_PER_HOUR=3
RATE_LIMIT_MAX_PER_DAY=10

# CORS - Add your Flutter app domains here
ALLOWED_ORIGINS=capacitor://localhost,http://localhost,https://yourapp.com
